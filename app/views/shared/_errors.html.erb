<div class="ui container">
  <% if obj.errors.any? %>
    <div class="ui positive message">
      <i class="close icon"></i>
      <div class="header">
        Some errors prevented the <%= obj.class.name.downcase %> from being saved:
      </div>
      <ul>
        <% obj.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
