
<div class="ui center aligned grid mt-40">
  <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">

      <div class="column">
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
          <div class="ui form">
            <div class="field">
              <%= f.label :username  %>
              <div class="ui left icon input">
                <%= f.text_field :username, class: "form-control text-center", placeholder: "enter username" %>
                <i class="user icon"></i>
              </div>
            </div>
            <div class="field">
              <%= f.label :password  %>
              <div class="ui left icon input">
                <%= f.password_field :password, class: "form-control text-center", placeholder: 'enter password' %>
                <i class="lock icon"></i>
              </div>
            </div>
            <%= f.submit "Log In", class: "ui blue submit button", style: "height:100%; width:100%" %>
          </div>
        <% end %>
      </div>
      <div class="middle aligned column">
        <%= link_to '<i class="signup icon"></i> SignUp'.html_safe, signup_path, class: "ui big button" %>
      </div>
    </div>
    <div class="ui vertical divider">
      Or
    </div>
  </div>
</div>
